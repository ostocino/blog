      </li>
    </ul-->
  </div>

   <!-- Blog Sidebar Widgets Column -->
  <div class="col-sm-4">
    <!-- Blog Search Well -->
    <div class="well">
      <h4>search <%= emojify(":mag:") %></h4>
      <div class="input-group">
        <input type="text" class="form-control">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">
            <span class="glyphicon glyphicon-search"></span>
          </button>
        </span>
      </div>
      <!-- /.input-group -->
    </div>

    <!-- Popular Posts Well -->
    <div class="well">
      <h4>popular <%= emojify(":star:") %></h4>
      <div class="row">
        <div class="col-md-6">
        <% @altPosts.order("upvotes desc").limit(3).each do |post| %>
          <%= link_to post do %>
            <p><%= post.upvotes %> <%= emojify(":thumbsup:") %> - <%= post.title %></p>
          <% end %>
        <% end %>

        </div>
