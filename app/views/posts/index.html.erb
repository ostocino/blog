  <!-- Blog Entries Column -->
  <div class="col-sm-8 content">
    <ul class="nav nav-pills">
      <li>
        <a><%= emojify(":zap:") %> development</a>
      </li>
      <li>
        <a><%= emojify(":eyes:") %> vr/ar</a>
