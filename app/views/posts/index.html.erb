        <a><%= emojify(":space_invader:") %> mxvr</a>
      </li>
    </ul>

    <br>
    <!--Blog Post ERB-->
    <% @posts.each do |post| %>
    <h4><%= link_to(post.title, post) %></h4>
    <p> by <%= post.user_id %>| <%= link_to(post.category, post.category) %> | <%= post.upvotes %> likes </p>
    <p class="text-muted small" style="margin-top: -10px;"> posted <%= time_ago_in_words(post.created_at) %> ago (<%= post.created_at.strftime("%b %d, %Y @ %H:%m") %>) </p>
    <p> <%= post.excerpt %> ... </p>

    <ul class="list-unstyled">
      <li class="btn btn-primary">
        <%= link_to "read more", 
        post, 
        style: "color: white;"%>
      </li>

      <li class="btn btn-info">
        <%= emojify(":thumbsup:") %>
        <%= link_to "like", 
        upvote_post_path(post),
        method: :put,
        style: "color: white;"%>
      </li>

      <li class="btn btn-warning">
        <%= emojify(":pencil2:") %>
        <%= link_to "edit", 
        edit_post_path(post),
        style: "color: white;"%>
      </li>

      <li class="btn btn-danger">
        <%= emojify(":x:") %>
        <%= link_to "delete", post, :method=> "delete", data: {confirm: "are you sure?"}, style: "color: white;"%>
      </li>
    </ul>
    <% end %>

