<%= form_for @post, url: {action: "create"} do |p| %>
  <h3><%= emojify(":tada:") %> new post <%= emojify(":tada:") %></h3>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label>title*</label>
        <%= p.text_field :title, :name => "title", :class => "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label>main image (optional)</label>
        <div class="fileinput fileinput-new" data-provides="fileinput">
          <div class="input-group">
            <div class="form-control uneditable-input" data-trigger="fileinput">
              <span class="fui-clip fileinput-exists"></span>
              <span class="fileinput-filename"></span>
            </div>
            <span class="input-group-btn btn-file">
              <span class="btn btn-default fileinput-new" data-role="select-file">Select file</span>
              <span class="btn btn-default fileinput-exists" data-role="change"><span class="fui-gear"></span>&nbsp;&nbsp;Change</span>
              <input type="file" name="...">
              <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput"><span class="fui-trash"></span>&nbsp;&nbsp;Remove</a>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <label>category*</label>
      <%= p.select :category, options_for_select([["development", "dev"], ["vr/ar", "vr-ar"], ["blog", "blog"]]), {}, {:class=> "form-control", :name => "category"} %>
    </div>
  </div>

   <div class="form-group">
    <label>excerpt* (use markdown)</label>
    <%= p.text_field :excerpt, :name => "excerpt", :class => "form-control" %>
  </div>

  <div class="form-group">
    <label>body* (use markdown)</label>
    <%= p.text_area :body, :name => "body", size: "60x15", :class => "form-control" %>
  </div>


  <div class="form-group">
    <%= p.submit("send", :class=> "btn btn-hg btn-primary pull-right") %>
  </div>

<% end %>