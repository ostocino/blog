  </head>
  <body>
  <style>
    img {
      max-width: 100% !important;
      border-radius: 10px !important;
    } 
  </style>
    <%= render partial: "partials/header" %>
    <div class="container">
      <div class="row">
        <div class="col-md-12 home">
          <%= render partial: "partials/messages" %>
          <%= yield %>
        </div>
      </div>
    </div>
    <%= render partial: "partials/footer" %>
